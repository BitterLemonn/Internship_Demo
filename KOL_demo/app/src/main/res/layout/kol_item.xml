<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent">

    <View
        android:id="@+id/kol_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#8b8b8b"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp" />

    <com.deshion.kol_demo.utils.ImageViewPlus
        android:id="@+id/kol_icon"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1377" />

    <TextView
        android:id="@+id/kol_id"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:singleLine="true"
        android:text="@string/unset"
        android:textColor="#4b4b4b"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/kol_icon"
        app:layout_constraintStart_toEndOf="@+id/kol_icon"
        app:layout_constraintTop_toTopOf="@+id/kol_icon"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.4263" />

    <TextView
        android:id="@+id/kol_blog"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:text="@string/unset"
        android:textColor="#8b8b8b"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/kol_icon"
        app:layout_constraintStart_toEndOf="@+id/kol_icon"
        app:layout_constraintTop_toTopOf="@+id/kol_icon"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.2115" />

    <TextView
        android:id="@+id/kol_fans"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:singleLine="true"
        android:text="@string/unset"
        android:textColor="#8b8b8b"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/kol_blog"
        app:layout_constraintStart_toEndOf="@+id/kol_blog"
        app:layout_constraintTop_toTopOf="@+id/kol_blog"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.2315" />

    <Button
        android:id="@+id/kol_detail_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kol_item_line" />

    <TextView
        android:id="@+id/kol_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/unset"
        android:textColor="#4b4b4b"
        android:textSize="16sp"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3072"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kol_icon"
        app:layout_constraintWidth_percent="0.9115" />

    <ImageView
        android:id="@+id/kol_more_pic"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:scaleType="centerInside"
        android:src="@drawable/more"
        app:layout_constraintEnd_toEndOf="@+id/kol_introduce"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="@+id/kol_introduce"
        app:layout_constraintTop_toBottomOf="@+id/kol_introduce"
        app:layout_constraintWidth_percent="0.062" />

    <com.deshion.kol_demo.utils.LinearLayoutWarp
        android:id="@+id/kol_tag_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:grivate="left"
        app:isFull="false"
        app:horizontal_Space="5dp"
        app:vertical_Space="5dp"
        app:layout_constraintEnd_toEndOf="@+id/kol_introduce"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/kol_introduce"
        app:layout_constraintTop_toBottomOf="@+id/kol_more_pic"
        app:layout_constraintWidth_percent="0.9115" />

</androidx.constraintlayout.widget.ConstraintLayout>